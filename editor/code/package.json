{
    "name": "nml",
    "description": "Language server for nml",
    "version": "0.0.1",
    "main": "./out/src/main.js",
    "contributes": {
        "languages": [
            {
                "id": "nml",
                "extensions": [
                    ".nml"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "configuration": {
            "title": "nml",
            "properties": {
                "nml.trace.server": {
                    "type": "string",
                    "scope": "window",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "enumDescriptions": [
                        "No traces",
                        "Debug messages only",
                        "Full log"
                    ],
                    "default": "off",
                    "description": "Trace events of the compiler"
                }
            }
        },
        "configurationDefaults": {
            "[nml]": {
                "editor.tabSize": 2
            }
        }
    },
    "engines": {
        "vscode": "^1.80.0"
    },
    "scripts": {
        "build": "tsc"
    },
    "dependencies": {
        "vscode-languageclient": "8.1.0"
    },
    "devDependencies": {
        "@types/node": "20.4.3",
        "@types/vscode": "^1.80.0",
        "typescript": "^5.1.6"
    }
}